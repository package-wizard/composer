{
    "name": "package-wizard/composer-light",
    "description": "Lightweight project template",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "composer",
        "init",
        "initializer",
        "package",
        "packages",
        "plugin",
        "wizard",
        "template",
        "preset"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro"
        }
    ],
    "support": {
        "issues": "https://github.com/package-wizard/composer-light/issues",
        "source": "https://github.com/package-wizard/composer-light"
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.7.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "PackageWizard\\ComposerLight\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dragon-code/codestyler": true,
            "ergebnis/composer-normalize": true,
            "friendsofphp/php-cs-fixer": true,
            "pestphp/pest-plugin": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
